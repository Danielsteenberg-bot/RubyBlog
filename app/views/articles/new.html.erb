<h1>New Article</h1>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %> <!-- Remove the space before "title" -->
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %> <!-- Use "text_area" instead of "text_field" for the body -->
    <% @article.errors.full_messages_for(:body).each do |message| %> <!-- Use "body" instead of "title" for error messages -->
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
